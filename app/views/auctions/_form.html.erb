<%= simple_form_for @auction do |f| %>
  <%= f.input :title, required: false, placeholder: "e.g. 'My awesome time machine'"%>
  <%= f.input :description, required: false, placeholder: "e.g. 'It sends you back in time similar to doctor who's phone booth" %>
  <%= f.input :ends_on %>
  <%= f.input :reserve_price, inline_label: "$" %>
  <%= f.submit "Create Auction", class: "btn btn-primary"%>
<% end %>