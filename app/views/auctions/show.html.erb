<h1><%= @auction.title %></h1>
<p><%= @auction.description %></p>
<p>Current Price: <%= number_to_currency(@auction.current_price) %></p>
<p>Reserve Price: <%= number_to_currency(@auction.reserve_price) %></p>
<p>Ends On: <%= @auction.ends_on.strftime("%Y-%b-%d") %></p>
<% if can? :edit, @auction %>
  <%= link_to "Edit", edit_auction_path(@auction), class: "btn btn-info" %>
<% end %>
<% if can? :destroy, @auction %>
  <%= link_to "Delete", @auction, class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>
