<div class="container">
  <h1>Sign in</h1>
  <%= simple_form_for "", url: sessions_path, method: :post do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.submit "Sign in", class: 'btn btn-success'%>
  <% end %>
  <div class="footer">
    <%= link_to "Not registered? Sign up here!", new_user_path %>
  </div>
</div>

